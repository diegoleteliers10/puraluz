---
import NoNav from "../layouts/NoNav.astro";
import {
  Table,
  TableBody,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from "../components/ui/table";
import {
  Breadcrumb,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbPage,
  BreadcrumbSeparator,
} from "../components/ui/breadcrumbs";
---

<NoNav title="Puraluz - Horarios">
  <section
    class="w-full sm:pt-[4.5rem] sm:px-[7rem] px-[1rem] py-[2.5rem] h-[100vh] flex flex-col"
  >
    <Breadcrumb>
      <BreadcrumbList>
        <BreadcrumbItem>
          <BreadcrumbLink
            href="/"
            className="text-[#00000080] hover:text-[#000000]"
            >Inicio</BreadcrumbLink
          >
        </BreadcrumbItem>
        <BreadcrumbSeparator className="text-[#00000080]" />
        <BreadcrumbItem>
          <BreadcrumbLink className="text-[#000000]">Horarios</BreadcrumbLink>
        </BreadcrumbItem>
      </BreadcrumbList>
    </Breadcrumb>

    <h2
      class="text-3xl font-normal tracking-tighter sm:text-5xl text-[#9DB2AF] font-yellowtail sm:mt-[1rem] mt-[3rem] title"
    >
      Horarios de Clases
    </h2>

    <p
      class="sm:mt-[1rem] mt-[1rem] max-w-[700px] text-[#00000070] sm:text-xl/relaxed"
    >
      Conoce nuestros horarios. Elige el que mas te acomode y hazme lo saber.
    </p>

    <div class="grid gap-4 mt-[1rem]">
      <Table>
        <TableHeader>
          <TableRow>
            <TableHead className="font-semibold text-black">Dia</TableHead>
            <TableHead className="font-semibold text-black">Hora</TableHead>
            <TableHead className="font-semibold text-black">Duracion</TableHead>
            <TableHead className="font-semibold text-black">Cantidad</TableHead>
            <TableHead className="font-semibold text-black">Tiempo</TableHead>
          </TableRow>
        </TableHeader>
        <TableBody>
          <TableRow>
            <TableCell className="font-medium text-black">Lunes y Miercoles</TableCell>
            <TableCell className="font-medium text-black">10:00 - 11:30</TableCell>
            <TableCell className="font-medium text-black">1:30 Horas</TableCell>
            <TableCell className="font-medium text-black">Max 10 personas</TableCell>
            <TableCell className="font-medium text-black">AM</TableCell>
          </TableRow>
          <TableRow>
            <TableCell className="font-medium text-black">Martes y Jueves</TableCell>
            <TableCell className="font-medium text-black">09:00 - 10:30</TableCell>
            <TableCell className="font-medium text-black">1:30 Horas</TableCell>
            <TableCell className="font-medium text-black"> Max 10 personas</TableCell>
            <TableCell className="font-medium text-black">AM</TableCell>
          </TableRow>
          <TableRow>
            <TableCell className="font-medium text-black">Viernes</TableCell>
            <TableCell className="font-medium text-black">10:00 - 11:30</TableCell>
            <TableCell className="font-medium text-black">1:30 Horas</TableCell>
            <TableCell className="font-medium text-black"> Max 10 personas</TableCell>
            <TableCell className="font-medium text-black">AM</TableCell>
          </TableRow>
          <TableRow>
            <TableCell className="font-medium text-black">Lunes y Miercoles</TableCell>
            <TableCell className="font-medium text-black">18:00 - 19:30</TableCell>
            <TableCell className="font-medium text-black">1:30 Horas</TableCell>
            <TableCell className="font-medium text-black">Max 10 personas</TableCell>
            <TableCell className="font-medium text-black">PM</TableCell>
          </TableRow>
          <TableRow>
            <TableCell className="font-medium text-black">Martes y Jueves</TableCell>
            <TableCell className="font-medium text-black">19:00 - 20:30</TableCell>
            <TableCell className="font-medium text-black">1:30 Horas</TableCell>
            <TableCell className="font-medium text-black"> Max 10 personas</TableCell>
            <TableCell className="font-medium text-black">PM</TableCell>
          </TableRow>
          <TableRow>
            <TableCell className="font-medium text-black">Viernes</TableCell>
            <TableCell className="font-medium text-black">17:00 - 18:30</TableCell>
            <TableCell className="font-medium text-black">1:30 Horas</TableCell>
            <TableCell className="font-medium text-black"> Max 10 personas</TableCell>
            <TableCell className="font-medium text-black">PM</TableCell>
          </TableRow>
        </TableBody>
      </Table>
    </div>
  </section>
</NoNav>
